# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="nolen"

# No more annoying pushd messages...
setopt PUSHD_SILENT

# Blank pushd goes to home
setopt PUSHD_TO_HOME

# protect against crazy rm...
setopt RM_STAR_WAIT

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
source $HOME/.dotfiles_config
alias vim='vim.gnome'
alias vv='vim ~/.vimrc'
alias zz='vim ~/.zshrc'
alias rel='source ~/.zshrc'
alias a='cd'
alias bp='bpython'
alias emacs='emacs -nw'
alias code='cd $CODEDIR'
alias etp='cd $CODEDIR/etp'
alias dotf='cd $CODEDIR/dotfiles'
# So I can use ctrl-s in vim maybe
alias vim="stty stop '' -ixoff ; vim"
# `Frozing' tty, so after any command terminal settings will be restored
ttyctl -f
alias sshe='ssh nroyalty@sandnet.emergingthreats.net'
alias sshef='ssh -L 127.0.0.1:3306:172.30.130.124:3306 nroyalty@sandnet.emergingthreats.net'
#ctrl-delete to forward kill word
bindkey "[3;5~" kill-word
# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
# COMPLETION_WAITING_DOTS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git, brew, github, osx, perl, pip, python)

source $HOME/.profile
source $ZSH/oh-my-zsh.sh

# Customize to your needs...

export PERL_LOCAL_LIB_ROOT="/home/nolen/perl5";
export PERL_MB_OPT="--install_base /home/nolen/perl5";
export PERL_MM_OPT="INSTALL_BASE=/home/nolen/perl5";
export PERL5LIB="/home/nolen/perl5/lib/perl5/i686-linux-gnu-thread-multi-64int:/home/nolen/perl5/lib/perl5";
export PATH="/home/nolen/perl5/bin:$PATH";
